<div><h1 class="mt-4">My quotes</h1></div>

<div class="row" style="height:1000px;">
  <% var count=0; doc.forEach((element)=>{ var id=element._id; var
  quote=element.quote; var date=new Date(parseInt(element.date)); var
  d=date.toDateString(); %>
  <div class="col-sm-6" style="margin-top:30px; ">
    <div class="card">
      <div class="card-body">
        <p class="card-title"><%=d%></p>
        <h4 class="card-text"><%=element.quote%></h4>
        <div style="margin-top:30px;">
          <a
            data-toggle="modal"
            data-target="#removemodel<%=count%>"
            class="btn btn-primary btn-raised"
            >Remove</a
          >&nbsp;

          <div
            class="modal fade"
            id="removemodel<%=count%>"
            tabindex="-1"
            role="dialog"
            aria-labelledby="exampleModalCenterTitle"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                  >
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <h6>Are your sure,you want to delete this quote?</h6>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                  >
                    cancel
                  </button>
                  <a
                    href="/quotes/delete/<%=element._id%>"
                    class="btn btn-secondary btn-raised"
                    >delete</a
                  >
                </div>
              </div>
            </div>
          </div>

          <a
            href="#"
            class="btn btn-primary btn-raised "
            data-toggle="modal"
            data-target="#exampleModalCenter<%=count%>"
            >EDIT</a
          >

          <!-- Modal -->
          <div
            class="modal fade"
            id="exampleModalCenter<%=count%>"
            tabindex="-1"
            role="dialog"
            aria-labelledby="exampleModalCenterTitle"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h6 class="modal-title" id="exampleModalLongTitle">
                    Posted On
                  </h6>
                  &nbsp;<%=d%>
                  <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                  >
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <form action="/quotes/updatequote/<%=id%>" method="POST">
                  <div class="modal-body">
                    <h6>
                      <textarea
                        required
                        class="form-control form-control-lg"
                        id="textareaid"
                        rows="3"
                        name="updatedquote"
                      >
<%=element.quote%></textarea
                      >
                    </h6>
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-dismiss="modal"
                    >
                      Close
                    </button>
                    <button type="submit" class="btn btn-primary">
                      Save changes
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% count++; })%>
</div>
